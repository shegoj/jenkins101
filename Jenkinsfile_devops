pipeline {
    agent any

    stages {
        stage ('List repo content') {
        when {
                branch "master"
        }
        steps {
                sh 'ls -ltr'
            }
        }
        stage ('create email dir on target machine') {
            steps {
                sh 'mkdir -p /tmp/email/others'
            }
        }
        stage ('Copy file from downloaded repo to dest') {
            steps {
                sh 'cp hotmail.txt /tmp/email/others'
            }
        }

    }
}